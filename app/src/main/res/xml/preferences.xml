<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <Preference
        android:defaultValue="default"
        android:key="@string/beep_sound_screen_key"
        android:title="@string/custom_sound_title" />
    <CheckBoxPreference
        android:key="@string/notification_preference_key"
        android:title="@string/notification_preference_title"
        android:summary="@string/notification_desc1"/>
    <CheckBoxPreference
        android:key="@string/use_location_key"
        android:summary="@string/use_location_text_description"
        android:title="@string/use_location_text" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/theme_setting_key"
        android:title="@string/dark_theme_setting_title" />
    <EditTextPreference
        android:defaultValue="3"
        android:inputType="number"
        android:key="@string/countdown_setting_key"
        android:textColor="@color/colorAccent"
        android:title="@string/countdown_setting_title" />
    <EditTextPreference
        android:defaultValue="5"
        android:inputType="numberDecimal"
        android:key="@string/starting_loc_accuracy_setting_key"
        android:summary="@string/starting_loc_accuracy_setting_desc"
        android:textColor="@color/colorAccent"
        android:title="@string/starting_loc_accuracy_setting_title" />
    <EditTextPreference
        android:defaultValue="10"
        android:inputType="number"
        android:key="@string/speed_sample_count_setting_key"
        android:summary="@string/speedometer_sample_count_setting_desc"
        android:title="@string/speedometer_sample_length_setting_title" />
</PreferenceScreen>